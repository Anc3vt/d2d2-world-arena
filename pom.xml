<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ru.ancevt.d2d2</groupId>
    <artifactId>d2d2</artifactId>
    <version>1.0.0.0-alpha</version>
    <packaging>pom</packaging>

    <name>D2D2 Main maven project</name>
    <url>https://github.com/Anc3vt/d2d2</url>

    <licenses>
        <license>
            <name>GNU General Public License v3 (GPLv3)</name>
            <url>https://www.gnu.org/licenses/gpl-3.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <id>ancevt</id>
            <name>Ancevt</name>
            <email>i@ancevt.ru</email>
        </developer>
    </developers>

    <distributionManagement>
        <repository>
            <id>ancevt</id>
            <url>https://packages.ancevt.ru/releases</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>ancevt</id>
            <url>https://packages.ancevt.ru/releases</url>
        </repository>
    </repositories>

    <modules>
        <module>d2d2-core</module>
        <module>d2d2-panels</module>
        <module>d2d2-world</module>
        <module>d2d2-world-editor</module>
        <module>d2d2-world-network-common</module>
        <module>d2d2-world-game</module>
        <module>d2d2-world-server</module>
        <module>network-messaging</module>
        <module>ttf2bmf</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>17</java.version>

        <!-- Plugins -->
        <maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
        <maven-assembly-plugin.version>3.1.0</maven-assembly-plugin.version>
        <maven-surefire-plugin.version>3.0.0-M5</maven-surefire-plugin.version>
        <maven-deploy-plugin.version>3.0.0-M1</maven-deploy-plugin.version>
        <maven-source-plugin.version>3.2.1</maven-source-plugin.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ru.ancevt.util</groupId>
                <artifactId>args</artifactId>
                <version>2.0.0</version>
            </dependency>
            <dependency>
                <groupId>ru.ancevt.util</groupId>
                <artifactId>repl</artifactId>
                <version>0.0.10</version>
            </dependency>
            <dependency>
                <groupId>ru.ancevt.d2d2</groupId>
                <artifactId>d2d2-core</artifactId>
                <version>1.0.0.12-alpha</version>
            </dependency>
            <dependency>
                <groupId>ru.ancevt.d2d2</groupId>
                <artifactId>d2d2-world</artifactId>
                <version>1.0.0.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ru.ancevt.d2d2</groupId>
                <artifactId>d2d2-panels</artifactId>
                <version>1.0.0.0-alpha</version>
            </dependency>
            <dependency>
                <groupId>ru.ancevt.net</groupId>
                <artifactId>network-messaging</artifactId>
                <version>1.0.0.0-alpha</version>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-classic</artifactId>
                <version>1.2.10</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>1.18.20</version>
            </dependency>
            <dependency>
                <groupId>ru.ancevt.d2d2world</groupId>
                <artifactId>d2d2-world-network-common</artifactId>
                <version>1.0.0.0-alpha</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${maven-deploy-plugin.version}</version>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
