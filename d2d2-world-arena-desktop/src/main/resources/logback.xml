<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>[%thread] %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="desktopfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>log/d2d2-world-arena-server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>log/d2d2-world-arena-desktop.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="ru.ancevt.d2d2world.desktop" level="trace" additivity="false">
        <appender-ref ref="desktopfile"/>
    </logger>

    <root level="trace">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
